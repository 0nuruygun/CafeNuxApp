<div class="modal-lg" role="dialog">
    <div class="modal-content">
        <div class="mdl-head">
            
            <div class="close">
                <button type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        <!-- Form -->
        <form action="categoriesUpdatePost" method="post">
            
            <div class="modal-body">
                <h5 class="ml-4 mb-4 p-1 modal-title">Update Category</h5>
                <!-- Target ID Value to Update -->
                <input class="d-none" type="text" name=".ID" value="<%= data.values.CategoryID %>" />

                <!-- Values -->
                <div class="container">
                    <!-- data.values --> 
                    <div class="row align-items-start">
                        <!-- Sol Sütün isActive
                            isCheff-->

                        <div class="col-12">
                            <div class="d-flex mb-3">
                                <label class="col-4" for="CategoryName">Name:</label><br>
                                <div class="w-100">
                                    <input class="w-100 inpt" type="text" id="CategoryName" name="CategoryName" value="<%= data.values.CategoryName %>"><br>
                                    <span class="bar"></span>
                                </div>
                            </div>

                            <div class="d-flex mb-3">
                                <label class="col-4" for="CategoryColor">Color:</label><br>
                                <div class="w-100">
                                    <input class="w-100 inpt" type="text" id="CategoryColor" name="CategoryColor" value="<%= data.values.CategoryColor %>"><br>
                                    
                                </div>
                            </div>

                            <div class="d-flex mb-3">
                                <label class="col-4" for="CategoryIcon">Icon:</label><br>
                                <div class="w-100">
                                    <input class="w-100 inpt" type="text" id="CategoryIcon" name="CategoryIcon" value="<%= data.values.CategoryIcon %>"><br>
                                    <span class="bar"></span>
                                </div>
                            </div>
                    
                            <div class="d-flex mb-3">
                                <label class="col-4" for="isActive">Is Active:</label><br>
                                <label class="chcont">
                                    <input type="hidden" id="isActive" name="IsActive"  value="<%= data.values.IsActive %>"><br>
                                    <span onclick="chBox('#isActive')" class="checkmark" style='background-color: <%= (data.values.IsActive == true) ? "#2f98e3" : "#ccc" %> '></span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <input type="button" value="Close" class="btn btn-secondary" data-dismiss="modal" />
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
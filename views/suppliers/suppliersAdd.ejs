<div class="modal-lg" role="dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Add Suppliers</h5>

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form action="suppliersAddPost" method="post">
            <div class="modal-body">
                <!-- Values -->
                <div class="container">
                    <div class="row align-items-start">
                        <!-- Sol Sütün -->
                        <div class="col-6">
                            <label for="SuppliersName">Suppliers Name:</label><br>
                            <input class="w-100" type="text" id="SuppliersName" name="SuppliersName"><br>
                            <label for="SuppliersPhone">Suppliers Phone:</label><br>
                            <input class="w-100" type="tel" id="SuppliersPhone" name="SuppliersPhone"><br>
                            <label for="SuppliersAddress">Address:</label><br>
                            <input class="w-100" type="text" id="SuppliersAddress" name="SuppliersAddress"><br>
                            <label for="SuppliersIBAN">IBAN:</label><br>
                            <input class="w-100" type="text" id="SuppliersIBAN" name="SuppliersIBAN"><br>
                        </div>

                        <!-- Sağ Sütün -->
                        <div class="col-6">
                            <label for="SuppliersTax">Tax:</label><br>
                            <input class="w-100" type="text" id="SuppliersTax" name="SuppliersTax"><br>
                            <label for="SuppliersVDI">VDI:</label><br>
                            <input class="w-100" type="text" id="SuppliersVDI" name="SuppliersVDI"><br>
                            <label for="SuppliersAlertLimit">Alert Limit:</label><br>
                            <input class="w-100" type="text" id="SuppliersAlertLimit" name="SuppliersAlertLimit"><br>
                            <label for="SuppliersCreatedDate">Created Date:</label><br>
                            <input class="w-100" type="date" min="1753-01-01" id="SuppliersCreatedDate" name="SuppliersCreatedDate"><br>
                        </div>

                        <div class="col-12" style="margin-top: 12px;">
                            <label for="SuppliersOrderStatusID">Order Status:</label><br>
                            <select class="w-100" aria-label="Select order status" id="SuppliersOrderStatusID" name="SuppliersOrderStatusID">
                                <% for (let i = 0; i < data.fkValues["SuppliersOrderStatusID"].length; i++) { %>
                                    <option value="<%= data.fkValues["SuppliersOrderStatusID"][i].value %>">
                                        <%= data.fkValues["SuppliersOrderStatusID"][i].displayValue %>
                                    </option>
                                <% } %>
                            </select><br>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <input type="button" value="Close" class="btn btn-secondary" data-dismiss="modal" />
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="modal-lg" role="dialog">
    <div class="modal-content">
        <div class="mdl-head">
            
            <div class="close">
                <button type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        <!-- Form -->
        <form action="tableinfoUpdatePost" method="post">
            
            <div class="modal-body">
                <h5 class="ml-4 mb-4 p-1 modal-title">Update Table Info</h5>
                <!-- Target ID Value to Update -->
                <input class="d-none" type="text" name=".ID" value="<%= data.values.TableInfoID %>" />

                <!-- Values -->
                <div class="container">
                    <!-- data.values --> 
                    <div class="row align-items-start">
                        <!-- Sol Sütün isActive
                            isCheff-->

                        <div class="col-12">
                            <div class="d-flex mb-3">
                                <label class="col-4" for="TableInfoName">Table Info Name::</label><br>
                                <div class="w-100">
                                    <input class="w-100 inpt" type="text" id="TableInfoName" name="TableInfoName" value="<%= data.values.TableInfoName %>"><br>
                                    <span class="bar"></span>
                                </div>
                            </div>

                            <div class="d-flex mb-3">
                                <label class="col-4" for="TableInfoStatusID">Table Status::</label><br>
                                <select class="w-100 inpt" aria-label="Select status" id="TableInfoStatusID" name="TableInfoStatusID">
                                    <% for (let i = 0; i < data.fkValues["TableInfoStatusID"].length; i++) { %>
                                        <option
                                            value="<%= data.fkValues["TableInfoStatusID"][i].value %>"
                                            <%= data.fkValues["TableInfoStatusID"][i].value === data.values.TableInfoStatusID ? "selected" : "" %>
                                        >
                                            <%= data.fkValues["TableInfoStatusID"][i].displayValue %>
                                        </option>
                                    <% } %>
                                </select><br>
                            </div>
                            <div class="d-flex mb-3">

                                <label class="col-4" for="TableInfoCapacity">Table Capacity:</label><br>
                                <div class="w-100">
                                    <input class="w-100 inpt" type="text" id="TableInfoCapacity" name="TableInfoCapacity" value="<%= data.values.TableInfoCapacity %>"><br>
                                    <span class="bar"></span>
                                </div>
                            </div>
                    
                            <div class="d-flex mb-3">
                                <label class="col-4" for="isActive">Is Active:</label><br>
                                <label class="chcont">
                                    <input type="hidden" id="isActive" name="IsActive"  value="<%= data.values.IsActive %>"><br>
                                    <span onclick="chBox('#isActive')" class="checkmark" style='background-color: <%= (data.values.IsActive == true) ? "#2f98e3" : "#ccc" %> '></span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <input type="button" value="Close" class="btn btn-secondary" data-dismiss="modal" />
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
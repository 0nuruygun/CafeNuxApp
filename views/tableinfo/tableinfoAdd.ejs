<div class="modal-lg" role="dialog">
    <div class="modal-content">
        <div class="mdl-head">
            
            <div class="close">
                <button type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        <!-- Form -->
        <form action="tableinfoAddPost" method="post">
            
            <div class="modal-body">
                <h5 class="ml-4 mb-4 p-1 modal-title">Add Table</h5>
                <!-- Values -->
                <div class="container">
                    <!-- data.values --> 
                    <div class="row align-items-start">
                        <!-- Sol Sütün isActive
                            isCheff-->

                            <div class="col-12">
                                <div class="d-flex mb-3">
                                    <label class="col-4" for="lastname">Table Info Name::</label><br>
                                    <div class="w-100">
                                        <input class="w-100 inpt" type="text" id="TableInfoName" name="TableInfoName"><br>
                                        <span class="bar"></span>
                                    </div>
                                </div>
    
                                <div class="d-flex mb-3">
                                    <label class="col-4" for="TableInfoStatusID">Table Status::</label><br>
                                    <select class="w-100 inpt" aria-label="Select status" id="TableInfoStatusID" name="TableInfoStatusID">
                                        <% for (let i = 0; i < data.fkValues["TableInfoStatusID"].length; i++) { %>
                                            <option value="<%= data.fkValues["TableInfoStatusID"][i].value %>">
                                                <%= data.fkValues["TableInfoStatusID"][i].displayValue %>
                                            </option>
                                        <% } %>
                                    </select><br>
                                </div>
                                <div class="d-flex mb-3">
    
                                    <label class="col-4" for="TableInfoCapacity">Table Capacity:</label><br>
                                    <div class="w-100">
                                        <input class="w-100 inpt" type="text" id="TableInfoCapacity" name="TableInfoCapacity"><br>
                                        <span class="bar"></span>
                                    </div>
                                </div>
                        
                                <div class="d-flex mb-3">
                                    <label class="col-4" for="isActive">Is Active:</label><br>
                                    <label class="chcont">
                                        <input type="hidden" id="isActive" name="IsActive"  value="true"><br>
                                        <span onclick="chBox('#isActive')" class="checkmark" style='background-color: #2f98e3'></span>
                                    </label>
                                </div>
                            </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <input type="button" value="Close" class="btn btn-secondary" data-dismiss="modal" />
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>